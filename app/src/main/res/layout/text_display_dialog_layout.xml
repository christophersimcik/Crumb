<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="5dp">

    <TextView
        android:id="@+id/notes_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Notes:"
        android:textSize="20sp" />

    <ImageButton
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/edit_text_button"
        android:background="@drawable/circle_selector"
        android:scaleType="fitCenter"
        android:src="@drawable/text_edit_selector"/>

    <RelativeLayout
        android:layout_below="@id/edit_text_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border_straight_dark"
        android:orientation="vertical"
        android:padding="5dp">
        <ScrollView
            android:id="@+id/description_input_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="600px"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:padding="10dp">
            <androidx.emoji.widget.EmojiTextView
                android:id="@+id/input_text_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>

        <Button
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/dismiss_button"
            android:layout_width="250px"
            android:layout_height="125px"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/dimsiss_button_selector"
            android:text="DISMISS" />
    </RelativeLayout>
</RelativeLayout>
